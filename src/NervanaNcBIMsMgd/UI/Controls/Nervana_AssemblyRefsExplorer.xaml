<UserControl x:Class="NervanaNcBIMsMgd.UI.Controls.Nervana_AssemblyRefsExplorer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NervanaNcBIMsMgd.UI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListView x:Name="ListView_ConstructionAssemblyRefs">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Name}" Width="100" Header="Name"></GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Group}" Width="150" Header="Group"></GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Speciality}" Width="100" Header="Speciality"></GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=AssemblyGroup}" Width="150" Header="AssGroup"></GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=AssemblyPrefix}" Width="80" Header="AssPrefix"></GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>    
    </Grid>
</UserControl>
