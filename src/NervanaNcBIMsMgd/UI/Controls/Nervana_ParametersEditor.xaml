<UserControl x:Class="NervanaNcBIMsMgd.UI.Controls.Nervana_ParametersEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NervanaNcBIMsMgd.UI.Controls"
             mc:Ignorable="d" d:Width="200" d:Height="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition Height="0.8*"></RowDefinition>
        </Grid.RowDefinitions>
        <TreeView x:Name="TreeView_ElementHierarchy" Grid.Row="0"
                ScrollViewer.VerticalScrollBarVisibility="Visible"
                TreeViewItem.Selected="TreeView_AfterSelect"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
        </TreeView>
        <DataGrid x:Name="DataGrid_ParametersInfo" Grid.Row="1"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            CanUserReorderColumns="False"
            CanUserResizeColumns="True"
            CanUserResizeRows="True"
            CanUserSortColumns="False"
            SelectionMode="Single"
            SelectionUnit="FullRow">

            <DataGrid.Columns>
                <!-- Caption -->
                <DataGridTextColumn 
                    Header="Caption" 
                    Binding="{Binding Caption, UpdateSourceTrigger=PropertyChanged}"
                    Width="0.2*"/>

                <!-- Name -->
                <DataGridTextColumn 
                    Header="Name" 
                    Binding="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                    Width="0.3">
                </DataGridTextColumn>

                <!-- Value -->
                <DataGridTextColumn 
                    Header="Value" 
                    Binding="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                    Width="0.5*">
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
       
    </Grid>
</UserControl>
