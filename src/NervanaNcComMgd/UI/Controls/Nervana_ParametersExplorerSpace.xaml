<UserControl x:Class="NervanaNcComMgd.UI.Controls.Nervana_ParametersExplorerSpace"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NervanaNcComMgd.UI.Controls"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition Height="0.7*"></RowDefinition>
            <RowDefinition Height="0.1*"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
        </Grid.RowDefinitions>
        <TreeView x:Name="TreeView_ElementHierarchy" Grid.Row="0"
                    ScrollViewer.VerticalScrollBarVisibility="Visible"
                    TreeViewItem.Selected="TreeView_AfterSelect"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
        </TreeView>
        <ListView x:Name="ListView_Info" Grid.Row="1" ScrollViewer.VerticalScrollBarVisibility="Visible">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Caption}" Width="150" Header="Имя параметра"></GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Value}" Width="Auto" Header="Значение параметра"></GridViewColumn>
                </GridView>
            </ListView.View>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <!-- Base style -->
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Foreground" Value="Black"/>

                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsCategory}" Value="True">
                            <Setter Property="Background" Value="#D4D4D4"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsReadOnly}" Value="True">
                            <Setter Property="Background" Value="#FFFFBAC0"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsReadOnly}" Value="False">
                            <Setter Property="Background" Value="#FFD3FFD2"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
        <TextBox x:Name="TextBox_ParameterValueEditing" Grid.Row="2" Height="30"></TextBox>
        <Button x:Name="Button_CopySingle" Grid.Row="3" Margin="0,5,0,0" Content="Копировать позицию" Click="Button_CopySingle_Click"></Button>
        <Button x:Name="Button_CopyAll" Grid.Row="4" Margin="0,5,0,0" Content="Копировать всё" Click="Button_CopyAll_Click"></Button>
    </Grid>
</UserControl>
