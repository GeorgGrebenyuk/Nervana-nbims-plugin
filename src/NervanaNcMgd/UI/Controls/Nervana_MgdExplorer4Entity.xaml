<UserControl x:Class="NervanaNcMgd.UI.Controls.Nervana_MgdExplorer4Entity"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NervanaNcMgd.UI.Controls"
             mc:Ignorable="d" 
             >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
        </Grid.RowDefinitions>
        <ListView x:Name="ListView_Info" Grid.Row="1" SelectionChanged="ListView_SelectionChanged" ScrollViewer.VerticalScrollBarVisibility="Visible">
			<ListView.View>
				<GridView>
					<GridViewColumn DisplayMemberBinding="{Binding Path=Caption}" Width="Auto" Header="Name"></GridViewColumn>
					<GridViewColumn DisplayMemberBinding="{Binding Path=Value}" Width="Auto" Header="Value"></GridViewColumn>
				</GridView>
			</ListView.View>
			<ListView.ItemContainerStyle>
				<Style TargetType="ListViewItem">
					<!-- Base style -->
					<Setter Property="Background" Value="White"/>
					<Setter Property="Foreground" Value="Black"/>

					<!-- Style based on CanDeep field -->
					<Style.Triggers>
						<DataTrigger Binding="{Binding CanDeep}" Value="Cat">
							<Setter Property="Background" Value="#D4D4D4"/>
						</DataTrigger>
						<DataTrigger Binding="{Binding CanDeep}" Value="+">
							<Setter Property="Background" Value="#D9FFC9"/>
							<Setter Property="FontWeight" Value="Bold"/>
						</DataTrigger>
						<DataTrigger Binding="{Binding VType}" Value="NotImplemented">
							<Setter Property="Background" Value="#FC8200"/>
							<Setter Property="FontStyle" Value="Italic"/>
						</DataTrigger>
						<DataTrigger Binding="{Binding VType}" Value="NotApplicable">
							<Setter Property="Background" Value="#FC0000"/>
							<Setter Property="FontStyle" Value="Italic"/>
						</DataTrigger>
					</Style.Triggers>
				</Style>
			</ListView.ItemContainerStyle>
		</ListView>
		<Button x:Name="Button_CopySingle" Grid.Row="2" Margin="0,5,0,0" Content="Копировать позицию" Click="Button_CopySingle_Click"></Button>
		<Button x:Name="Button_CopyAll" Grid.Row="3" Margin="0,5,0,0" Content="Копировать всё" Click="Button_CopyAll_Click"></Button>
	</Grid>
</UserControl>
