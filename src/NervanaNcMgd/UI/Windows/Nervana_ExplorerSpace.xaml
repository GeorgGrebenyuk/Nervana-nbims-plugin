<Window x:Class="NervanaNcMgd.UI.Windows.Nervana_ExplorerSpace"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NervanaNcMgd.UI.Windows"
        mc:Ignorable="d"
        Title="Обозреватель классов" >
	<Window.Resources>
		<Style TargetType="ListViewItem">
			<Setter Property="HorizontalContentAlignment" Value="Stretch" />
		</Style>
	</Window.Resources>
	
	<Grid Margin="5">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="2*" />
			<ColumnDefinition Width ="6*"/>
		</Grid.ColumnDefinitions>
		<GroupBox Header="Анализируемые данные:">
			<TreeView
				Grid.Column="0"
				x:Name="TreeView_SourceData"
				ScrollViewer.HorizontalScrollBarVisibility="Visible"
				ScrollViewer.VerticalScrollBarVisibility="Visible"
				TreeViewItem.Selected="TreeView_AfterSelect"
				HorizontalAlignment="Stretch"
				VerticalAlignment="Stretch"/>
		</GroupBox>

		<GroupBox Header="Информация об объекте:" x:Name="GroupBoxForListView" Grid.Column="1">

		</GroupBox>
		
	</Grid>
</Window>
