<Window x:Class="NervanaNcMgd.UI.Windows.Nervana_ExplorerSpace"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NervanaNcMgd.UI.Windows"
        mc:Ignorable="d"
        Title="Обозреватель классов" >
	<Window.Resources>
		<Image x:Key="MgdExplR_UI_Copy" Source="/NervanaNcMgd;component/Resources/MgdExplR_UI_Copy.ico"/>
		<Image x:Key="MgdExplR_UI_Copy_All" Source="/NervanaNcMgd;component/Resources/MgdExplR_UI_Copy_All.ico"/>
		<Style TargetType="ListViewItem">
			<Setter Property="HorizontalContentAlignment" Value="Stretch" />
		</Style>
	</Window.Resources>
	
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="40" />
			<ColumnDefinition Width="2*" />
			<ColumnDefinition Width ="6*"/>
		</Grid.ColumnDefinitions>
		<StackPanel  Grid.Column="0">
			<Button 
				x:Name="Button_CopySingle" 
				Width="32" 
				Height="32" 
				Margin="0,30,0,0" 
				Click="Button_CopySingle_Click" 
				Content="{StaticResource MgdExplR_UI_Copy}" >
			</Button>
			<Button 
			x:Name="Button_CopyAll" 
			Width="32" 
			Height="32" 
			Margin="0,5,0,0" 
			Click="Button_CopyAll_Click" 
			Content="{StaticResource MgdExplR_UI_Copy_All}" >
			</Button>

		</StackPanel>
		<Label 
			Grid.Column="1"
			x:Name="Label_TreeData"
			Content="Анализируемые данные:"></Label>
		<TreeView
			Grid.Column="1"
			Margin="0,30,0,0"
			x:Name="TreeView_SourceData"
			ScrollViewer.HorizontalScrollBarVisibility="Visible"
			ScrollViewer.VerticalScrollBarVisibility="Visible"
			TreeViewItem.Selected="TreeView_AfterSelect"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch"/>
		<Label
			Grid.Column="2"
			x:Name="Label_ObjectInfo"
			Content="Информация об объекте:" 
			Margin="10,0,0,0"></Label>
		<ListView
			Grid.Column="3"
			Margin="10,30,10,0"
			x:Name="ListView_Info"
			SelectionChanged="ListView_SelectionChanged">
			<ListView.View>
				<GridView>
					<GridViewColumn DisplayMemberBinding="{Binding Path=Caption}" Width="Auto" Header="Name"></GridViewColumn>
					<GridViewColumn DisplayMemberBinding="{Binding Path=Value}" Width="Auto" Header="Value"></GridViewColumn>
				</GridView>
			</ListView.View>
			<ListView.ItemContainerStyle>
				<Style TargetType="ListViewItem">
					<!-- Base style -->
					<Setter Property="Background" Value="White"/>
					<Setter Property="Foreground" Value="Black"/>

					<!-- Style based on CanDeep field -->
					<Style.Triggers>
						<DataTrigger Binding="{Binding CanDeep}" Value="Cat">
							<Setter Property="Background" Value="#D4D4D4"/>
						</DataTrigger>
						<DataTrigger Binding="{Binding CanDeep}" Value="+">
							<Setter Property="Background" Value="#D9FFC9"/>
							<Setter Property="FontWeight" Value="Bold"/>
						</DataTrigger>
						<DataTrigger Binding="{Binding VType}" Value="NotImplemented">
							<Setter Property="Background" Value="#FC8200"/>
							<Setter Property="FontStyle" Value="Italic"/>
						</DataTrigger>
						<DataTrigger Binding="{Binding VType}" Value="NotApplicable">
							<Setter Property="Background" Value="#FC0000"/>
							<Setter Property="FontStyle" Value="Italic"/>
						</DataTrigger>
					</Style.Triggers>
				</Style>
			</ListView.ItemContainerStyle>
		</ListView>
	</Grid>
</Window>
