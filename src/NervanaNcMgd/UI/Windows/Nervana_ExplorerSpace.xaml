<Window x:Class="NervanaNcMgd.UI.Windows.Nervana_ExplorerSpace"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NervanaNcMgd.UI.Windows"
        mc:Ignorable="d"
        Title="Обозреватель классов" >
	<Window.Resources>
		<Image x:Key="MgdExplR_UI_Copy" Source="../Resources/MgdExplR_UI_Copy.ico"/>
		<Image x:Key="MgdExplR_UI_Copy_All" Source="../Resources/MgdExplR_UI_Copy_All.ico"/>
		<Style TargetType="ListViewItem">
			<Setter Property="HorizontalContentAlignment" Value="Stretch" />
		</Style>
	</Window.Resources>
	
	<Grid Background="White">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="40" />
			<ColumnDefinition Width="Auto" MinWidth="300" />
			<ColumnDefinition Width ="*"/>
		</Grid.ColumnDefinitions>
		<StackPanel  Grid.Column="0">
			<Button 
				x:Name="Button_CopySingle" 
				Width="32" 
				Height="32" 
				Margin="0,30,0,0" 
				Click="Button_CopySingle_Click" 
				Content="{StaticResource MgdExplR_UI_Copy}" >
			</Button>
			<Button 
			x:Name="Button_CopyAll" 
			Width="32" 
			Height="32" 
			Margin="0,5,0,0" 
			Click="Button_CopyAll_Click" 
			Content="{StaticResource MgdExplR_UI_Copy_All}" >
			</Button>

		</StackPanel>
		<Label 
			Grid.Column="1"
			x:Name="Label_TreeData"
			Content="Анализируемые данные:"></Label>
		<TreeView
			Grid.Column="1"
			Margin="0,30,0,0"
			x:Name="TreeView_SourceData"
			ScrollViewer.HorizontalScrollBarVisibility="Visible"
			ScrollViewer.VerticalScrollBarVisibility="Visible"
			TreeViewItem.Selected="TreeView_AfterSelect"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch"/>
		<Label
			Grid.Column="2"
			x:Name="Label_ObjectInfo"
			Content="Информация об объекте:" 
			Margin="10,0,0,0"></Label>
		<ListView
			Grid.Column="3"
			Margin="10,30,10,0"
			x:Name="ListView_Info"
			SelectionChanged="ListView_SelectionChanged">
			<ListView.View>
				<GridView>
					<GridViewColumn DisplayMemberBinding="{Binding Path=CanDeep}" Width="60">CanDeep</GridViewColumn>
					<GridViewColumn DisplayMemberBinding="{Binding Path=Caption}" Width="150">Name</GridViewColumn>
					<GridViewColumn DisplayMemberBinding="{Binding Path=Value}" Width="200">Value</GridViewColumn>
				</GridView>
			</ListView.View>
		</ListView>
	</Grid>
</Window>
